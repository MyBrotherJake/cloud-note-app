// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  createdAt   DateTime
  updatedAt   DateTime
  destroyedAt DateTime?
  folders     Folder[]
  notes       Note[]
}

model Folder {
  id          String    @id @default(uuid())
  name        String
  createdAt   DateTime
  updatedAt   DateTime
  destroyedAt DateTime?
  notes       Note[]
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}

model Note {
  id          String    @id @default(uuid())
  title       String?
  content     String?
  createdAt   DateTime
  updatedAt   DateTime
  archivedAt  DateTime?
  destroyedAt DateTime?
  folder      Folder?   @relation(fields: [folderId], references: [id])
  folderId    String?
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}
